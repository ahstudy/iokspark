<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="find_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我行摄像机"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>
	<RelativeLayout
	    android:id="@+id/RelativeLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >

		<FrameLayout
		    android:id="@+id/camera_preview"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_above="@+id/rl_layout"
		    android:background="#fcfcfc"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="1" />

	    <RelativeLayout
	        android:id="@+id/rl_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/title_bar"
	        android:gravity="center"
	        android:orientation="vertical" >

			<ImageButton
	            android:id="@+id/camera_switch_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:visibility="gone"
	            android:src="@drawable/mm_title_btn_camera_switch" />

	        <AbsoluteLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_weight="2" >

	            <TextView
	                android:id="@+id/mediarecorder2_TextView01"
	                android:layout_width="40px"
	                android:layout_height="40px"
	                android:layout_x="5px"
	                android:layout_y="1px"
	                android:text="00"
	                android:textColor="#ffff0000"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/mediarecorder2_TextView02"
	                android:layout_width="20px"
	                android:layout_height="40px"
	                android:layout_x="25px"
	                android:layout_y="1px"
	                android:text=":"
	                android:textColor="#ffff0000"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/mediarecorder2_TextView03"
	                android:layout_width="40px"
	                android:layout_height="40px"
	                android:layout_x="35px"
	                android:layout_y="1px"
	                android:text="00"
	                android:textColor="#ffff0000"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/mediarecorder2_TextView04"
	                android:layout_width="20px"
	                android:layout_height="40px"
	                android:layout_x="55px"
	                android:layout_y="1px"
	                android:text=":"
	                android:textColor="#ffff0000"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/mediarecorder2_TextView05"
	                android:layout_width="40px"
	                android:layout_height="40px"
	                android:layout_x="65px"
	                android:layout_y="1px"
	                android:text="00"
	                android:textColor="#ffff0000"
	                android:textStyle="bold" />
	        </AbsoluteLayout>

	        <ImageView
	            android:id="@+id/video_normal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="14dp"
	            android:src="@drawable/video_recorder_start_btn_nor_land" />

	        <ImageView
	            android:id="@+id/video_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:visibility="gone"
	            android:src="@drawable/video_recorder_recording_btn_land" />

	    </RelativeLayout>

	</RelativeLayout>
</LinearLayout>